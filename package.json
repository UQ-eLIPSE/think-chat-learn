{
  "name": "moocchat",
  "version": "2.2.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "seed": "node util/db_seed.js",
    "test": "mocha",

    "clean_client": "rimraf public/css/moocchat2 public/js/moocchat2 public/combined-html",
    "clean_server": "rimraf build",
    "clean": "npm run clean_client && npm run clean_server",

    "build_client_main": "tsc --project ./src/client/js",
    "build_client_backup_client": "tsc --project ./src/client/js/tsconfig-backup-client.json",
    "build_client_css": "node-sass -q ./src/client/css/moocchat2/main.scss ./public/css/moocchat2/main.css",
    "build_client_combined_html": "node ./util/combineHTML.js",

    "build_client": "npm run build_client_main && npm run build_client_backup_client && npm run build_client_css && npm run build_client_combined_html",
    "build_server": "tsc --project ./src/server/js",
    "build": "npm run clean && npm run build_client && npm run build_server"
  },
  "author": "eLIPSE",
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.15.2",
    "concat-files": "0.1.0",
    "ejs": "2.4.2",
    "express": "4.13.4",
    "mkdirp": "0.5.1",
    "mongojs": "2.3.0",
    "oauth-signature": "1.3.1",
    "requirejs": "2.2.0",
    "socket.io": "1.4.5"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^2.5.3",
    "node-sass": "^3.8.0",
    "php-express": "0.0.3",
    "rimraf": "^2.5.3",
    "typescript": "^1.8.0",
    "typings": "^1.3.0"
  }
}
