{
  "name": "moocchat",
  "version": "0.1.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "seed": "node util/db_seed.js",
    "db_test": "node ./node_modules/mocha/bin/mocha test/database.js",
    "dependencies": "node ./util/get_dependencies.js",
    "build_index": "node util/build_index.js",
    
    "build_client": "tsc --project ./src/client/js && node-sass ./src/client/css/moocchat2/main.scss > ./public/css/moocchat2/main.css",
    "build_client_on_zone": "tsc --project ./src/client/js && sass ./src/client/css/moocchat2/main.scss ./public/css/moocchat2/main.css",
    
    "build_server": "tsc --project ./controllers",
    "build_server_on_zone": "tsc --project ./controllers",
    
    "build": "npm run build_client && npm run build_server",
    "build_on_zone": "npm run build_client_on_zone && npm run build_server_on_zone"
  },
  "author": "eLIPSE",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.15.2",
    "concat-files": "^0.1.0",
    "ejs": "^2.4.2",
    "express": "4.13.4",
    "mongojs": "2.3.0",
    "php-express": "0.0.3",
    "socket.io": "1.4.5"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^2.5.3",
    "node-sass": "^3.8.0",
    "typescript": "^1.8.0",
    "typings": "^1.3.0"
  }
}
