<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>MOOCchat</title>

    <link rel="stylesheet" href="./static/css/normalize/4.1.1/normalize.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,700" />
    <link rel="stylesheet" href="./static/css/moocchat/main.css" />
    
    <!-- Piwik code not used in backup client -->

    <% if (typeof postData !== "undefined" && postData.lti_message_type === "basic-lti-launch-request") { %>
    <!-- LTI Basic Launch data -->
    <script>
        var _LTI_BASIC_LAUNCH_DATA = <%- JSON.stringify(postData); %>;
    </script>
    <% } %>
    
    <script data-main="./static/require/backup-client.require.config" src="./static/js/require.js/2.2.0/require.min.js"></script>
</head>

<body class="backup-client">
    <div id="top-bar-message">
        <div id="reconnect-message" class="hidden">Hang on while we're getting you reconnected...</div>
        <div id="send-attempt-message" class="hidden">Sending data again... Attempt #<span></span></div>
    </div>
    <div id="header">
        <div id="blackboard-open" class="hidden"><button class="thin link">Open Blackboard</button></div>
        <div id="logo"></div>
        <h1 id="moocchat-name">MOOCchat</h1>
        <div id="course-name"></div>
        <ul id="task-sections"></ul>
    </div>
    <div id="content">
    </div>
</body>

</html>